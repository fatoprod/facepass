rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Face images storage rules
    match /faces/{eventId}/{fileName} {
      // Allow public read for face verification at the gate
      allow read: if true;
      
      // Allow public write for ticket registration
      // In production, you might want to restrict this to authenticated users
      allow write: if true;
    }
    
    // Catch-all: deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
